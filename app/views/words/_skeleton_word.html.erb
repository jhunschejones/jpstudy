<div
  class="word skeleton-word"
>
  <div class="delete">
    <button disabled>
      <%= heroicon "trash", variant: :outline %>
    </button>
  </div>
  <div class="edit">
    <a disabled>
      <%= heroicon "pencil-alt", variant: :outline %>
    </a>
  </div>
  <div class="starred">
    <button disabled>
      <span title="Not checked off yet">
        <%= heroicon "star", variant: :outline, options: { class: "not-starred" } %>
      </span>
    </button>
  </div>
  <div class="checked-off">
    <button disabled>
      <span title="Not checked off yet">
        <%= heroicon "plus", variant: :outline, options: { class: "unchecked" } %>
      </span>
    </button>
  </div>

  <div class="translation">
    <span class="japanese" lang="jp">骨格</span>
    <span class="english">
      <%= heroicon "chevron-right", variant: :outline, options: { class: "right-arrow" } %>
      <span class="english-text">skeleton; skeletal structure; frame;</span>
    </span>
  </div>

    <div class="source">
      <span class="added-on large-only">Added 11/12/2021</span>
      <span class="source-name">
        <span class="large-only">from </span>
        Jisho.org Vocab
      </span>
      <span class="source-reference"></span>
    </div>

  <div class="resources">
    <% 9.times do %>
      <span class="skeleton-resource-link"></span>
    <% end %>
  </div>
</div>
