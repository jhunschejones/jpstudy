<% if @word.valid? %>
  <%= turbo_stream.prepend "words_1" do %>
    <%= render partial: "words/word", locals: { word: @word, apply_js_filters: true } %>
  <% end %>

  <%= turbo_stream.replace "new-word-form" do %>
    <%= render "words/new_word_button" %>
  <% end %>

  <%= turbo_stream.remove "no-words-message" %>
<% else %>
  <%# coppied from app/views/words/_form.html.erb:30 %>
  <%= turbo_stream.replace "create-word-button" do %>
    <%= submit_tag "Create Word", id: "create-word-button", class: "button-blue submit", data: { controller: "disable", disable_with_value: "Saving...", disable_use_direct_form_submit_value: request.referrer.nil?, action: "disable#disableButton", disable_target: "button" } %>
  <% end %>
<% end %>

<%= turbo_stream.replace "flashes", partial: "application/flashes" %>
