<div class="kanji-finder-container">
  <div class="kanji-finder-form">
    <h2 class="title">Kanji finder</h2>

    <p class="light-gray head-explanation">
      Search text for new kanji to add to your kanji list
    </p>

    <%= form_tag(bulk_create_kanji_path(@resource_owner)) do |form| %>
      <div class="field">
        <%= text_area_tag :text, nil, autofocus: true, required: true, rows: 6, minlength: 1, maxlength: 2000 %>
      </div>

      <div class="actions">
        <%= submit_tag "Find and add kanji", class: "button-blue", data: { controller: "disable", disable_with_value: "Finding and adding kanji...", action: "disable#disableButton", disable_target: "button" } %>
        <%= link_to "Back", next_kanji_path(@resource_owner), class: "basic-button back-button" %>
      </div>
    <% end %>
  </div>
</div>
