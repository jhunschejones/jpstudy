<div class="memos-page">
  <h1 class="page-title">
    Study memos
  </h1>

  <p class="light-gray head-explanation">
    A little scratch pad to keep notes about your studying ğŸ“
  </p>

  <div class="memo-form" data-controller="memo">
    <%= form_with(model: @memo, url: memo_path(@resource_owner, @memo), data: { memo_target: "form" }) do |form| %>
      <div class="field">
        <%= form.rich_text_area :content, data: { memo_target: "content" } %>
      </div>

      <div class="field">
        <p class="light-gray auto-save-message">
          <small>(Auto-saves after 5s)</small>
        <p>
        <%= form.submit "Save changes", class: "button-blue", data: { memo_target: "saveButton", controller: "disable", disable_with_value: "Saving...", action: "disable#disableButton", disable_target: "button" } %>
      </div>
    <% end %>
  </div>
</div>
